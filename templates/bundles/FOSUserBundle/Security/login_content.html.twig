{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
    <div class="logo">login</div>
    <!-- Main Form -->
    <div class="login-form-1">
       <form action="{{ path("fos_user_security_check") }}"  id="login-form" class="text-left" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <label for="lg_username" class="sr-only">Username</label>
                      <!--  <input type="text" class="form-control" id="lg_username" name="lg_username" placeholder="username">-->
                        <input type="text" id="username" name="_username" placeholder="username" value="{{ last_username }}" required="required" autocomplete="username" />

                    </div>
                    <div class="form-group">
                        <!--<label for="lg_password" class="sr-only">Password</label>
                        <input type="password" class="form-control" id="lg_password" name="lg_password" placeholder="password">-->
                        <label for="lg_password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="password" />
                    </div>
                    <div class="form-group login-group-checkbox">
                        <!--<input type="checkbox" id="lg_remember" name="lg_remember">
                        <label for="lg_remember">remember</label>-->
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                </div>
                <button type="submit" class="login-button" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" ><i class="fa fa-chevron-right"></i></button>
            </div>

            <div class="etc-login-form">
                <p>forgot your password? <a href="#">click here</a></p>
                <p>new user? <a href="/register">create new account</a></p>
            </div>
        </form>
    </div>
    <!-- end:Main Form -->
</div>
